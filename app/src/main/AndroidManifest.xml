<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dharashah.showcaseandroidapp" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".ShowCaseApp">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|keyboard|screenSize|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddDeviceActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|keyboard|screenSize|orientation"></activity>
        <activity android:name=".activity.AddVersionActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|keyboard|screenSize|orientation"></activity>
    </application>
</manifest>
